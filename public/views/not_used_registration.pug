extends layout

block header

block content
    .cover
      .register-box.container-fluid.col-10.col-md-5.col-lg-3
        h4#register-header Register
        .form-group
          label(for="usr") First Name
          input.form-control(type='text' placeholder="John")
        .form-group
          label(for="usr") Last Name
          input.form-control(type='text', placeholder="Doe")
        .form-group
          label(for="email") E-mail
          input#exampleInputEmail1.form-control(type='john@example.com', placeholder="Password")
        .form-group
          label(for="exampleInputPassword1") Password
          input#exampleInputPassword1.form-control(type='Password', placeholder="Password")
        .sign-in-btn
          button.btn.btn-success(type='submit') Submit
          p#signin-option Already have an account?
          a.btn.btn-success(href='/signin', role='button') Sign In
    section.info
